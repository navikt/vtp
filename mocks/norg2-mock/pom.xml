<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<artifactId>mocks</artifactId>
		<groupId>no.nav.foreldrepenger.vtp</groupId>
		<version>${revision}${sha1}${changelist}</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<artifactId>norg2-mock</artifactId>
	<name>VTP ::norg2-mock</name>
	<packaging>jar</packaging>

	<dependencies>
		<dependency>
			<groupId>no.nav.foreldrepenger.vtp</groupId>
			<artifactId>core</artifactId>
		</dependency>

		<!-- 3dje parts NAV felleskomponenter -->
		<dependency>
			<groupId>no.nav.tjenestespesifikasjoner</groupId>
			<artifactId>arbeidsfordeling-v1-tjenestespesifikasjon</artifactId>
		</dependency>

		<dependency>
			<groupId>no.nav.tjenester</groupId>
			<artifactId>nav-organisasjonEnhet-v2-tjenestespesifikasjon</artifactId>
			<classifier>jaxws</classifier>
		</dependency>

		<!-- 3dje parts biblioteker -->
		<dependency>
			<groupId>org.jboss.resteasy</groupId>
			<artifactId>resteasy-jaxrs</artifactId>
		</dependency>
		<dependency>
			<groupId>io.swagger</groupId>
			<artifactId>swagger-jaxrs</artifactId>
		</dependency>

		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-http-spi</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>io.swagger</groupId>
				<artifactId>swagger-codegen-maven-plugin</artifactId>
				<version>2.4.14</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>

						<configuration>
							<inputSpec>${basedir}/src/main/resources/norg2-api.json</inputSpec>

							<generateApis>false</generateApis>
							<generateModelDocumentation>false</generateModelDocumentation>
							<generateModelTests>false</generateModelTests>
							<generateSupportingFiles>false</generateSupportingFiles>

							<language>jaxrs</language>
							<output>${project.basedir}</output>

							<modelNamePrefix>norg2</modelNamePrefix>
							<modelPackage>no.nav.norg2.model</modelPackage>

							<configOptions>
								<sourceFolder>target/generated-sources/swagger</sourceFolder>
							</configOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>

        </dependency>
        <dependency>
            <groupId>no.nav.vedtak.fpmock2</groupId>
            <artifactId>core</artifactId>
        </dependency>
        <dependency>
            <groupId>no.nav.vedtak.fpmock2</groupId>
            <artifactId>testmodell</artifactId>
        </dependency>
        <dependency>
            <groupId>no.nav.vedtak.fpmock2</groupId>
